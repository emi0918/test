<div class="bootstrap">

<div class="row">
  <div class="spacer"></div>
  <div class="col-md-12">

    <div class="spacer"></div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'mailbox/providers' %>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if is_conversation %>
            <%= render 'conversations/form' %>
        <% else %>
            <%= render partial: 'conversations/provider', collection: messages %>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>


