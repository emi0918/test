

<div class="bootstrap">
  <div class="media">
    <div class="media-left">
      <a href="#">
        <%= image_tag provider.originator.profile_pic, :class => 'media-object' , :size => '64x64'  %>
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading">
        <%= provider.originator.name %> <br>
        <small><b>件名: </b><%= provider.subject %></small><br>
        <small><b>日付: </b><%= provider.messages.last.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
      </h4>
      <%= truncate provider.messages.last.body, length: 145 %>


      <%= link_to "開く", provider_path(provider)  %>

    </div>
  </div>
</div>



