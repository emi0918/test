<%= render 'home/header/dashboardhead' %>

<div class="customer_reservation_provider_info">
   <% @note.note_revisions.each do |note_revision| %>
<h4><%= link_to note_revision.title,  note_path(@note) %></h4>
<%= note_revision.price%>円 （税込）
   <% @note.provider.store_infos.each do |s| %>
<p><%= s.payment%></p>
<p><%= note_revision.catchcopy %></p>

</div>


<div class="customer_info_about_reservation">


	<h1><%= note_revision.title%>の予約内容 </h1>
<% end %>

 
<% @note.reservations.each do |reservation| %>
<div class="bootstrap1">

	<div class="reservations_infomations_wrapper">
		ご予約受付日：<%= reservation.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
		<p><%= @note.provider.name %>へのお申し込み</p>
		<p><i class="fa fa-envelope-o" aria-hidden="true"></i><%= link_to "お問い合わせする",  new_note_conversation_path(reservation.note) %> </p>
		

		<h5>予約希望日</h5>
		<p>希望日時１： <%= reservation.workdate1 %> 　<%= reservation.worktime1 %> </p>
		<p>希望日時２： <%= reservation.workdate2 %> 　<%= reservation.worktime2 %> </p>
		<p>希望日時３： <%= reservation.workdate3%> 　<%= reservation.worktime3 %> </p>
		<h5>お客様のご連絡先</h5>
		<p>氏名：<%= reservation.name %></p>
		<p>電話：<%= reservation.phone_number %></p>
		<p>お問い合わせ内容：<%= reservation.message %></p>

</div>
<% end %>
<% end %>      



