
<div class="reservation-confirm">
  <div class="bootstrap">
    <%=  @note.provider.name %>さんの"<%= @note.title %>"仮予約フォーム

    <%= form_for([@note, @reservation], url: {action: 'confirm'} ) do |f| %>
    <% if @reservation.errors.any? %>
    <div id="error_explanation">
     

      <ul>
        <% @reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <table class="newpost">

      <tr>
       <th> <p>ご希望の日程 <span class="form-label required">必須</span></p></th>
       <td>
        <%= f.date_select :date %>
      </td>
    </tr>

    <tr>
      <th> <p>お名前 <span class="form-label required">必須</span></p></th>
      <td>
        <div class="row row-20">
         <div class="col-xs-5">
          <%= f.text_field :name,  class: 'form-control',placeholder:"山田 太郎" %>
        </div>
      </div>
    </td>
  </tr>


  <tr>
   <th> <p>電話番号<span class="form-label required">必須</span></p></th>
   <td>

    <div class="row row-20">
      <div class="col-xs-5">
        <%= f.text_field :phone_number,  class: 'form-control' ,  placeholder:"1234567890"%>

      </div>
    </div>
  </td>
</tr>

<tr>
 <th> <p>詳細予約内容 <span class="form-label required">必須</span></p></th>
 <td>
   <%= f.text_area :message , class: 'content-area', placeholder:"詳細のご要望内容、ご予約内容、事前に相談しておきたいこと等を書きましょう"%>
 </td>
</tr>
</table>

<%= f.submit '予約内容を確認する', class:'shadow_btn', data:{ disable_with: "・・・"} %>
<%= link_to "サービスページへ戻る", :back %>
</div>

<% end %>

</div>



