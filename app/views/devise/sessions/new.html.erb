
<div class="bootstrap1">

  <div class="content_in_user">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログインを記憶 %>
          <%= link_to "パスワードを忘れた", new_password_path(resource_name), id: 'pass_for'%><br />
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "log_button", id: "login" %>
      <hr>
      <p>または</p>



    </div>
  <% end %>


