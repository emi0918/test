<div class="bootstrap">

  <div class="content_in_user">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

  
    <div class="actions">
      <%= f.submit "ログイン", class: "log_button", id: "login" %>
      <hr>
    </div>

  <% end %>


  <%= render "devise/shared/links" %>
<%= link_to "パスワードを忘れた", new_password_path(resource_name), id: 'pass_for'%>



</div>
</div>
