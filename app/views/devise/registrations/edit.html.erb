<% provide :title, "ユーザー設定"  %>

<div class="up-var">
  <div class="upper-menu">
    <div class="wrapper" >
    <div class="main-container">
      <ul>
        <li><a href='/users'>マイページ</a></li>
         <li><a href='/mailbox/inbox'>メッセージ
        <li><a href='/reservations/list'>取引履歴</a></li>
        <li><a href='/users/edit'>基本設定</a></li>
       
      </ul>
      </div>
    </div>
  </div>
</div>

 <div class="main-container">
<div class="providers_new_post">
<div class="bootstrap">
<h2>一般アカウント設定</h2>
</br>
 
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
 
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<table class="newpost">

    <tr>
     <th> <p>プロフィール写真 <span class="form-label optional">任意</span></p></th>
     <td>
     <%= f.file_field :mainpic, class: "form-control image-field" %>
      <%= f.hidden_field :mainpic_cache %>
    </td>
  </tr>

    <tr>
     <th> <p>ユーザーネーム <span class="form-label required">必須</span></p></th>
     <td>
     <%= f.text_field :name, class: 'form-control' %>
    </td>
  </tr>





 
   <tr>
     <th> <p>メールアドレス <span class="form-label required">必須</span></p></th>
     <td>
     <%= f.email_field :email, class: "form-control" %>
    </td>
  </tr>


   <tr>
     <th> <p>現在のパスワード <span class="form-label required">必須</span></p></th>
     <td>
     <%= f.password_field :current_password, class: "form-control" %>
    </td>
  </tr>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

 

</table></div>


     <%= f.submit '保存する', :class => 'btn btn-default', data:{ disable_with: "保存中・・・"} %>

<% end %>
</div>

<div class="delete_account">

<h3>アカウントを削除する</h3>

<p>退会してしまうと現在のデータはすべて削除されます。<%= button_to "退会する", registration_path(resource_name), :class => 'provider_delete_btn' , data: { confirm: "本当に退会しますか？" }, method: :delete %></p>




  </div>
  <%= link_to "戻る", :back %>
</div>

</div>




