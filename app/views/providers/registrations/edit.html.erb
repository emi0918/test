<option value="沖縄県">沖縄県</option>
</select>
     </div>
    </td>





</tr>
<tr class="cell-join">

     <td> <p>市区町村<span class="form-label required">必須</span></p>
  <div class="col-xs-6">
     <%= s.text_field :city, class: 'form-control'%>
     </div>
    </td>
</tr>
<tr class="cell-join">
  
     <td><p> 町名・番地<span class="form-label required">必須</span></p>
  <div class="col-xs-6">
     <%= s.text_field :address, class: 'form-control'%>
     </div>
    </td>
</tr>

<tr class="cell-join">

     <td> <p>ビル名・部屋番号<span class="form-label required">必須</span></p>
  <div class="col-xs-6">
     <%= s.text_field :building, class: 'form-control'%>
     </div>
    </td>
</tr>




  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

</div>
</table>
</div>

    <%= f.submit "編集を更新する",  :class => 'btn btn-default'%>

<% end %>
<% end %>
<% end %>

<h3>アカウントを削除する</h3>

<p>Unhappy? <%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,  :class => 'provider_delete_btn' %></p>

<%= link_to "Back", :back %>

</div>
</div>
