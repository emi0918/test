<%= render 'providers/header' %>
 <div class="main-container">
<div class="providers_new_post">
<div class="bootstrap">

<h2>店舗の基本情報を編集する</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


  <table class="newpost">
 

     <tr>
   <th> <p>店舗名<span class="form-label required">必須</span></p></th>
   <td>
    <%= f.text_field :name, class: 'form-control',placeholder:"〇〇〇〇サービス" %>
  </td>
</tr>

   <%= f.fields_for :store_infos do |s| %>
  
<tr>
 <th> <p>店舗紹介<span class="form-label required">必須</span> </p></th>
 <td>
  <div class="largeform">
  <%= s.text_area :about, class: 'form-control',placeholder:"店舗の特徴、スタッフの雰囲気、ご自身の経歴・取得済み資格、提供サービスへの思いなどを詳しく紹介しましょう" %>
  </div>
</td>
</tr>



   <tr>
   <th> <p>営業時間<span class="form-label required">必須</span></p></th>
   <td>
     <div class="col-xs-5">
    <%= s.text_field :hours, class: 'form-control',placeholder:"8時～15時受付まで対応可" %>
    </div>
  </td>
</tr>

 <tr>
   <th> <p>定休日<span class="form-label required">必須</span></p></th>
   <td>
       <div class="col-xs-5">
    <%= s.text_field :holiday, class: 'form-control',placeholder:"不定休" %>
  </td>
  </div>
</tr>

　
  <tr>
   <th> <p>料金受け取り方法<span class="form-label required">必須</span></p></th>
   <td>
          <div class="col-xs-5">
    <%= s.text_field :payment, class: 'form-control',placeholder:"現金・クレジットカード" %>
    </div>
  </td>
</tr>



 <%= f.fields_for :provider_accounts do |a| %>

  <tr>
   <th> <p>代表者名<span class="form-label required">必須</span></p></th>
   <td>
          <div class="col-xs-5">
    <%= a.text_field :staffname, class: 'form-control',placeholder:"山田 太郎" %>
    </div>
  </td>
</tr>




  <tr>
   <th> <p>電話番号<span class="form-label required">必須</span></p></th>
   <td>
          <div class="col-xs-5">
    <%= a.text_field :phonenumber, class: 'form-control',placeholder:"1234-56-7890" %>
    </div>
  </td>
</tr>



<tr>
 <th> <p>スタッフ写真<span class="form-label required">必須</span> </p></th>
 <td>
        <div class="col-xs-7">
  <%= f.file_field :mainpic, class: "form-control image-field" %>
  </div>
</td>
</tr>

<tr class="cell-join">
<th class="address" rowspan="5">住所</th>

     <td> <p>郵便番号(ハイフンなし)<span class="form-label required">必須</span> </p>
      <div class="col-xs-4">
     <%= s.text_field :postalcode, class: 'form-control',placeholder:"123-4567"%>
         </div>
    </td>

</tr>


<tr class="cell-join">

     <td> <p>都道府県<span class="form-label required">必須</span></p>
      <div class="col-xs-4">
   <select class="form-control" name="provider[store_infos_attributes][0][prefecture]" id="provider_store_infos_attributes_0_prefecture">
<option value="" selected>都道府県</option>
<option value="北海道">北海道</option>
<option value="青森県">青森県</option>
