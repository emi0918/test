<%= render 'providers/header' %>


<div class="provider_wrapper">
  <div class="provider-introduction_profile">
 <h1><%= current_provider.name %>さんのページ  </h1>


 <% if current_provider.mainpic? %>
    <%= image_tag current_provider.mainpic.url, :class => 'provider_main_pic'%>
  <% else %>
    <%= image_tag 'Seekle_icon.png', :class => 'provider_main_pic'%>
  <% end %>



   <% current_provider.store_infos.each do |s| %>
  <table class="sample_03">
   <tbody>
    <tr>
    
    <tr>
     <th>営業時間：</th>
      <td><%= s.hours %></td>
    </tr>

     <tr>
     <th>定休日：</th>
      <td> <%= s.holiday %></td>
    </tr>

    <tr>
    <th>所在地：</th>
      <td><%= current_provider.address %></td>
    </tr>
    
    <tr>
    <th>お支払い：</th> 
      <td><%= s.payment %></td>
    </tr>
   
  </tbody>
</table>


<div class="store_explain">
  <h2>店舗紹介：</h2> 
<%= simple_format(s.about) %> 


    <% if s.about.blank? %>
    <%= link_to 'プロフィール編集ページ', '/providers/edit' %>から設定してください。
     <%end%>
  

  </div>
  </div>


</div>
<% end %>
